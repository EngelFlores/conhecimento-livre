<div class="tabcontent" id="Courses">
  <table class="table">
    <tr>
      <th>Titulo</th>
      <th>Autor</th>
      <th>Id</th>
      <th> <a href="/admin/newCourse"><div class="button is-primary">+</div></a></th>
    </tr>
    {{#allAuthors}}
    {{#courses}}
    <tr>
      <td><a href="/admin/contentList/{{ _id }}">{{title}}</a></td>
      <td>{{author}}</td>
      <td id="id-{{_id}}">{{_id}}</td>
      <td>
      <a class="button is-danger" onclick="deleteItem('{{_id}}', 'courses')">Delete</button>
        <button id="editCourse" type="button" name="edit">Edit</button>
      </td>
    </tr>
    {{/courses}}
    {{/allAuthors}}
  </table>
</div>
<script src="/js/deleteItem.js"></script>
