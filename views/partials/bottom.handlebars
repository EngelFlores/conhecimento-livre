<div class="container">
  {{#allContents}}
  <a href="/course/{{ _id }}">
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        {{ title }}
      </p>
    </header>
    <div class="card-content has-text-grey-darker">
      <div class="has-text-grey">
        {{ description }}
      </div>
        <div style="text-align-last: justify;">
          <span class="has-text-grey-dark">
            {{ author }}
          </span>
          <span class="has-text-right has-text-grey-dark">
            {{ language }}
          </span>
        </div>
    </div>
  </div>
  {{/allContents}}
  </a>
</div>
