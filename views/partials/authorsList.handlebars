<div class="tabcontent" id="Author">
  <table class="table">
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Id</th>
      <th><a class="button is-primary" href="/admin/newAuthor">+</a></th>
    </tr>
    {{#allAuthors}}
    <tr>
      <td>{{name}}</td>
      <td>{{email}}</td>
      <td id="id-{{_id}}">{{_id}}</td>
      <td>
        <button onclick="deleteItem('{{_id}}', 'author')"  type="button" name="delete">Delete</button>
        <form action="/admin/authorData/{{_id}}" method="post">
          <button type="submit" value={{_id}}>Editar</button>
        </form>
      </td>
    </tr>
    {{/allAuthors}}
  </table>
</div>
<script src="/js/deleteItem.js"></script>
