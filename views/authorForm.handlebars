<div class="hero-body">

  <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <input id="name" class="input" type="text" placeholder="Text input">
    </div>
  </div>

  <div class="field">
    <label class="label">Email</label>
    <div class="control has-icons-left has-icons-right">
      <input id="email" class="input is-danger" type="email" placeholder="Email input" value=''>
      <span class="icon is-small is-left">
        <i class="fa fa-envelope"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fa fa-warning"></i>
      </span>
    </div>
    <p class="help is-danger">O email é inválido</p>
  </div>

  <div class="field">
    <label class="label">Biografia</label>
    <div class="control">
      <textarea id='bio' class="textarea" placeholder="Textarea"></textarea>
    </div>
  </div>

  <div class="field">
    <label class="label">Foto (url)</label>
    <div class="control">
      <input id="photourl"class="input" type="text" placeholder="Text input">
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <button id="submit" class="button is-link">Salvar</button>
    </div>
    <div class="control">
      <button class="button is-text">Cancelar</button>
    </div>
  </div>
</div>
<script language="JavaScript" type="text/javascript">
$('#submit').click(function(e) {
  e.preventDefault();
  var data = {};
  data.name = $('#name').val()
  data.email = $('#email').val()
  data.bio = $('#bio').val()
  data.photourl = $('#photourl').val()

console.log(data);
  if ((data.name || data.email || data.bio || data.photourl) === "") {
    alert('TODOS OS CAMPOS SÃO NECESSÁRIOS')
  }else{
    $.ajax('http://localhost:3000/admin/newAuthor', {
      type: 'POST',
      data: JSON.stringify(data),
      contentType: 'application/json',
      success: function() {console.log('sucess');},
      error  : function() { console.log('error');}
    });
  }
})
</script>
