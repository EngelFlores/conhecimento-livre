<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="../css/bulma.css">
</head>
<body class="is-dark">
  {{> header}}
  <div class="tile is-ancestor">
    <div class="tile is-vertical is-8">

      <div class="tile is-parent fullhight">
        <article class="tile is-child notification">
          {{#contentItem}}
          <p class="title">{{title}}</p>
          <div class="content">
            <iframe width="100%" height="480" src="https://www.youtube.com/embed/{{url}}" frameborder="0" allowfullscreen></iframe>
            {{/contentItem}}
            <nav class="level">
              <div class="level-left">
                {{#authorItem}}
                <a href="/author/{{ _id }}">{{author}}</a>
                {{/authorItem}}
              </div>
              <div class="level-right">
                {{#contentItem}}
                <div class="level-item has-text-centered">
                  <div>
                    <p class="heading title is-6">Views: {{ views }}</p>
                    {{/contentItem}}
                  </div>
                </div>
              </nav>
            <nav class="level">
              <div class="level-left">
                {{#previous}}
                <form  action="/content/{{ id }}">
                  <input class="button is-primary" type="submit" value="Anterior">
                </form>
                {{/previous}}
              </div>
              <div class="level-right">
                    {{#next}}
                    <form action="/content/{{ id }}">
                      <input class="button is-primary"type="submit" value="Proximo">
                    </form>
                  {{/next}}
              </nav>
            </div>
          </article>
        </div>
      </div>
      <div class="tile is-parent">
        <article class="tile is-child notification box">
          <div class="content">
              <h5 class="title is-5">Outras aulas:</h5>
              {{#contents}}
              <div class="scroll playlist-container">
                <ul>
                  <li>
                    <a class='thumbnail' href="/content/{{ id }}">
                      <img src="http://i1.ytimg.com/vi/{{ url }}/mqdefault.jpg" alt="">
                      <div class="title-video">{{ title }}</div>
                      <p class="preview"> {{ preview }}</p>
                    </a>
                  </li>
                </ul>
                {{else}}
                <p class="title is-7"> NÃ£o possui proximas aulas</p>
              </div>
              {{/contents}}
          </div>
        </article>
      </div>
    </div>
  </body>
  </html>
